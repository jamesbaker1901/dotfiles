# dunst solarized theme
# tostiheld 2015

[global]
    font                 = Inconsolata 10
    markup               = full
    plain_text           = no
    format               = "<b>%s</b>\n%b"
    ignore_newline       = no
    show_indicators      = yes
    separator_color      = frame
    
    sort                 = yes
    alignment            = left
    bounce_freq          = 0
    word_wrap            = yes
    
    indicate_hidden      = yes
    show_age_threshold   = 60
    idle_threshold       = 120
    
    geometry             = "300x5-10+34"
    indicate_hidden 	 = yes
    shrink               = no
    line_height          = 0
    notification_height  = 100
    separator_height     = 2
    padding              = 8
    horizontal_padding   = 8
    frame_width		 = 1
    frame_color 	 = "#93a1a1"
    transparency	 = 10 
    monitor              = 0
    follow               = mouse
    
    sticky_history       = yes
    history_length       = 20
    icon_position        = left
    stack_duplicates	 = true

    startup_notification = false
    dmenu                = /usr/bin/dmenu -p dunst:
    browser              = /usr/bin/firefox -new-tab

    icon_path		 = /usr/share/icons/Paper/16x16/status:/usr/share/icons/Paper/16x16/devices
    max_icon_size 	 = 64

[shortcuts]
    close     = ctrl+space
    close_all = ctrl+shift+space
    history   = ctrl+grave
    context   = ctrl+shift+period

[urgency_low]
    background = "#586e75"
    foreground = "#eee8d5"
    timeout = 10

[urgency_normal]
    background = "#073642"
    foreground = "#eee8d5"
    timeout = 5

[urgency_critical]
    background = "#dc322f"
    foreground = "#eee8d5"
    timeout = 0
